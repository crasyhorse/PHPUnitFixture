{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://github.com/crasyhorse/PHPUnitFixture/configSchema.json",
    "title": "PHPUnitFixture configuration schema",
    "description": "JSON schema for PHPUnitFixture configuration",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "loaders", "readers", "sources"
    ],
    "properties": {
        "loaders": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 1,
            "patternProperties": {
                "^[A-Za-z0-9]+$": {
                    "type": "string",
                    "pattern": "^\\\\((([A-Z][A-Za-z0-9]+)\\\\)+)[A-Z][A-Za-z0-9]+$"
                }
            }
        },
        "encoders": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[A-Za-z0-9]+$": {
                    "type": "string",
                    "pattern": "^\\\\((([A-Z][A-Za-z0-9]+)\\\\)+)[A-Z][A-Za-z0-9]+$"
                }
            }
        },
        "readers": {
            "type": "object",
            "additionalProperties": false,
            "minProperties": 1,
            "patternProperties": {
                "^[A-Za-z0-9\\/\\*]+$": {
                    "type": "string",
                    "pattern": "^\\\\((([A-Z][A-Za-z0-9]+)\\\\)+)[A-Z][A-Za-z0-9]+$"
                }
            }
        },
        "sources": {
            "type": "object",
            "additionalProperties": false,
            "patternProperties": {
                "^[A-Za-z0-9]+$": {
                    "type": "object",
                    "properties": {
                        "driver": {
                            "type": "string",
                            "enum": [
                                "Local"
                            ]
                        },
                        "root_path": {
                            "type": "string"
                        },
                        "default_file_extension": {
                            "type": "string"
                        },
                        "encode": {
                            "type": "array",
                            "uniqueness": true,
                            "minItems": 1,
                            "items": {
                                "type": "object",
                                "properties": {
                                    "mime-type": {
                                        "type": "string",
                                        "pattern": "(\\w+|\\*)/(\\w+|\\*)?"
                                    },
                                    "encoder": {
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "mime-type",
                                    "encoder"
                                ]
                            }
                        }
                    },
                    "required": [
                        "driver",
                        "root_path"
                    ],
                    "additionalProperties": false,
                    "anyOf": [
                        {
                            "not": {
                                "properties": {
                                    "driver": {
                                        "const": "Local"
                                    }
                                }
                            }
                        },
                        {
                            "properties": {
                                "root_path": {
                                    "pattern": "^(?!(\\/|[[:alpha:]]:\\\\)\\.{2}[\\\\\\/]|[[:alpha:]]\\\\)([[:alpha:]]:)?((\\.{0,2}[\\\\\\/]|[\\w\\/\\\\])+)$"
                                }
                            }
                        }
                    ]
                }
            },
            "minProperties": 1,
            "required": [
                "default"
            ]
        }
    }
}